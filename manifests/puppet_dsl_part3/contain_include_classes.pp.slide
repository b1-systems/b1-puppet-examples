class ntp {
  package { 'ntp': [...] }
  file { '/etc/ntp.conf':
    [...]
    require => Package['ntp'],
    notify  => Class['ntp::service'],
  }
  include ntp::service
}
class ntp::service { service { 'ntpd': [...] } }
include ntp
exec { '/bin/head /etc/ntp.conf':
  require   => Class['ntp'],
}
